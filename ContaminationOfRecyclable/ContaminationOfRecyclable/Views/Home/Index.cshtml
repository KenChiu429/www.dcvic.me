<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<figure class="highcharts-figure">
    <div id="container"></div>
    <p class="highcharts-description">

    </p>
</figure>


<script>
    $(document).ready(function () {
        $.getJSON("/Home/GetData", function (data) {
            var periods = []
            var contamination_rates = []

            for (var i = 0; i < data.length; i++) {
                periods.push(data[i].period);
                contamination_rates.push(data[i].rate)
            }

            Highcharts.chart('container', {
                chart: {
                    type: 'spline'
                },
                title: {
                    text: 'Kerbside recyclables, contamination rate, Victoria 2001–02 to 2019–20',
                    align: 'left'
                },
                xAxis: {
                    categories: periods,
                    accessibility: {
                        description: 'Year'
                    }
                },
                yAxis: {
                    title: {
                        text: 'Contamination Rate (%)'
                    },
                },
                tooltip: {
                    crosshairs: true,
                    shared: true
                },
                plotOptions: {
                    spline: {
                        marker: {
                            radius: 4,
                            lineColor: '#666666',
                            lineWidth: 1
                        }
                    }
                },
                series: [{
                    name: 'Contamination',
                    data: contamination_rates
                }]
            });

        })
    })
</script>

